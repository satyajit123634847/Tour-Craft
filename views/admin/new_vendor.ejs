<%- include('header.ejs') %>
    <div class="main-panel">
        <div class="content-wrapper">

            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Add New Vendor</h4>

                            <form id="vendor_register" data-parsley-validate>

                                <input type="hidden" id="id">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="exampleInputUsername1">Name</label>
                                            <input type="text" class="form-control" id="name" placeholder="Name"
                                                required="" data-parsley-required-message="Please Enter Name">
                                        </div>

                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="exampleInputUsername1">Email</label>
                                            <input type="text" class="form-control" id="email" placeholder="Email"
                                                required="" data-parsley-required-message="Please Enter Email">
                                        </div>

                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="exampleInputCity1">Code of Conduct</label>
                                            <input type="file" class="form-control"
                                                onchange="vendor.upload_forward_attachment_files(this)"
                                                id="attachment_forword" placeholder="Location"
                                                accept="application/pdf,application/vnd.ms-excel" multiple>

                                            <div class="img_pre mt-2" style="display: flex;">
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="exampleInputCity1">IT Declaration</label>
                                            <input type="file" class="form-control" id="attachment_revert"
                                                placeholder="Location" accept="application/pdf,application/vnd.ms-excel"
                                                onchange="vendor.upload_revert_attachment_files(this)" multiple>
                                            <div class="img_pre mt-2" style="display: flex;">
                                            </div>
                                        </div>

                                    </div>




                                    <div class="col-md-4 mt-md-3">
                                        <button type="submit" class="btn btn-primary mr-2 mt-md-3"
                                            id="submit_data">Submit</button>

                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 grid-margin transparent">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">New Register Vendor</h4>

                                    <div class="table-responsive pt-3">
                                        <table class="table table-bordered" id="vendor_table">

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>


        </div>




        <button type="button" id="action_mdole_btn" class="btn btn-primary" data-toggle="modal"
            data-target="#action_model" style="display: none;">
            Launch demo modal
        </button>

        <!-- Modal -->
        <div class="modal fade" id="action_model" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Action</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <input type="hidden" id="vendor_action_id">
                        <div id="forword_section">
                            <div class="form-group" id="ban_section" style="display: none;">
                                <label for="exampleTextarea1">Enter BAAN Number</label>
                                <input type="number" class="form-control" id="ban_number_input"
                                    placeholder="Enter BAN Number">
                            </div>
                            <div class="form-group" id="finanical_section" style="display: none;">
                                <label for="exampleTextarea1">Financial Supplier Group</label>
                                <input type="text" class="form-control" id="financial_supplier"
                                    placeholder="Enter Financial Supplier">
                            </div>


                            <div class="form-group">
                                <label for="exampleTextarea1">Comment</label>
                                <textarea class="form-control" id="comment_forword" rows="4"
                                    placeholder="Please Enter Comment"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCity1">Attachment</label>
                                <input type="file" class="form-control"
                                    onchange="vendor.upload_forward_attachment_files(this)" id="attachment_forword"
                                    placeholder="Location" accept="image/*,application/pdf,audio/*,video/mp4">

                                <div class="img_pre mt-2" style="display: flex;">
                                </div>
                            </div>
                            <div class="form-group" id="user_section_role">
                                <label for="exampleSelectGender">Select User</label>
                                <select class="form-control" id="select_user">


                                </select>
                            </div>

                        </div>
                        <div id="revert_section" style="display: none;">
                            <div class="form-group">
                                <label for="exampleTextarea1">Comment</label>
                                <textarea class="form-control" id="comment_revert" rows="4"
                                    placeholder="Please Enter Comment"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCity1">Attachment</label>
                                <input type="file" class="form-control" id="attachment_revert" placeholder="Location"
                                    onchange="vendor.upload_revert_attachment_files(this)"
                                    accept="image/*,application/pdf,audio/*,video/mp4">
                                <div class="img_pre mt-2" style="display: flex;">
                                </div>
                            </div>


                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button type="button" id="forword_btn" onclick="vendor.forward_to()"
                            class="btn btn-primary">Forward</button>
                        <button type="button" id="revert_btn" onclick="vendor.revert_back()" style="display: none;"
                            class="btn btn-primary">Revert Back</button>

                    </div>

                </div>
            </div>
        </div>


        <!-- -------time line  model---------------- -->
        <!-- Button trigger modal -->
        <button type="button" id="timeline_btn" class="btn btn-primary" data-toggle="modal"
            data-target="#timeline_model" style="display: none;">
            Launch demo modal
        </button>

        <!-- Modal -->
        <div class="modal fade" id="timeline_model" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title" id="exampleModalLabel">Timeline</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">



                            <div class="col-12">


                                <h3 id="vendor_name_timeline">Vendor Name</h3>

                                <div class="timeline">
                                    <div class="outer" id="timeline_data">




                                    </div>
                                </div>





                            </div>
                        </div>

                    </div>


                </div>
            </div>
        </div>

        <!-- ------------time line model end -->


        <%- include('footer.ejs') %>


            <script src="admin/new_vendor.js"></script>
            <script src="helper/parsley.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

            <script>
                $(document).ready(function () {
                    $(function () {
                        vendor.base_url = "<%=base_url%>";
                        vendor.init();
                    });
                });
            </script>